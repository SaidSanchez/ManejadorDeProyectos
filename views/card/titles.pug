extends ../layout

block content
      h1 Listado de Tarjetas
      table
        thead
            tr
                th Narrativa de la Historia
                th Como
                th Quiero
                th De tal Manera
                th Criterios de Aceptacion
                th Dado
                th Cuando
                th Entonces
                th Tama√±o
                th Prioridad
                th Validada
                th
                    a(href="/cards/add") Nuevo
        tbody
            each card in cards.docs
                tr
                    td= card.narrative
                    td= card.rol
                    td= card.functionality
                    td= card.benefit
                    td= card.criteria
                    td= card.context
                    td= card.events
                    td= card.results
                    td
                      select(class=`size` id=`${card.id}`)
                        option(value=card.size)= card.size
                        if card.size != 1
                          option(value=1) 1
                        if card.size != 2
                          option(value=2) 2
                        if card.size != 3
                          option(value=3) 3
                        if card.size != 5
                          option(value=5) 5
                        if card.size != 8
                          option(value=8) 8
                        if card.size != 13
                          option(value=13) 13
                        if card.size != 21
                          option(value=21) 21
                    td= card.priority
                    td= card.validated
                    td
                        a(href='#') Editar
                        form(method='POST')
                            input(type='submit' action=`/cards/${card.id}?_method=DELETE`)

        a(href="/cards/1") <<
        if cards.hasPrevPage
            a(href=`/cards/${cards.prevPage}`) <
        if cards.hasNextPage
            a(href=`/cards/${cards.nextPage}`) >
        a(href=`/cards/${cards.totalPages}`) >>

      script(src='/scripts/story.js')
